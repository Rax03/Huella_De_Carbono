<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration">
<hibernate-configuration>
    <session-factory>
        <!-- Configuración de la base de datos -->
        <property name="hibernate.connection.driver_class">org.mariadb.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mariadb://localhost:3306/huelladecarbono</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MariaDBDialect</property>

        <!-- Configuración de Hibernate -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Clases anotadas -->
        <mapping class="org.example.entities.Usuario"/>
        <mapping class="org.example.entities.Habito"/>
        <mapping class="org.example.entities.Huella"/>
        <mapping class="org.example.entities.Categoria"/>
        <mapping class="org.example.entities.Actividad"/>
        <mapping class="org.example.entities.Recomendacion"/>
    </session-factory>
</hibernate-configuration>
